TRUNCATE TABLE bronze.crm_cust_info; --before bulk insert truncate and then load
BULK INSERT bronze.crm_cust_info
FROM 'C:\Users\Norah Chipoyera\Documents\SQL\sql\sql-data-warehouse-project\sql-data-warehouse-project\datasets\source_crm\cust_info.csv'
WITH(
	FIRSTROW = 2, -- first row starts on the 2nd
	FIELDTERMINATOR =',', --how fields are terminates
	TABLOCK --the table is locked during the process
);

--test the quality of bronze file after bulk insert
--check if we have data in the correct column

Select * from bronze.crm_cust_info

Select count(*) from bronze.crm_cust_info

